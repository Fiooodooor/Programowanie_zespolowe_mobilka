<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:padding="3dp"
    android:id="@+id/ProjectListSingleRowResourceId"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/proView"
        android:innerRadius="0dp"
        android:background="@color/textBack_projectTile"
        app:cardCornerRadius="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"  >
    <ImageView
        android:id="@+id/proIcon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/pro_single_icon"
        android:src="@drawable/ic_empty_env_tile"
        android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/proName"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:text="@string/pro_single_name"
        android:textSize="16sp"
        android:textColor="@color/textColor_projectTile"
        android:maxLines="1"
        android:background="@color/textBack_projectTile"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/proView"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />


    <TextView
        android:id="@+id/proDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/pro_single_description"
        android:textSize="11sp"
        android:textColor="@color/textColor_projectTile"
        android:background="@color/textBack_projectTile"
        android:layout_below="@id/proName"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/proView"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        />
</RelativeLayout>